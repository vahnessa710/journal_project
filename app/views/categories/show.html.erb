<%# <p style="color: green"><%= notice %>
<div class = "container">
  <h2><%= render @category %></h2>

  <div class = "tasklist-group">
    <%= render "tasks/tasks_under_category", tasks: @category.tasks, category: @category %>
    <p class = "add-task">
      <%= link_to new_category_task_path(@category), class: "add-task-link" do %>
        <i class="fas fa-plus"></i> Add New Task
      <% end %>
    </p>
  </div>

  <div class = "delete-all-btn-container">
    <%= button_to "Delete all", @category, class: "delete-button", method: :delete, data: { turbo_confirm: "Are you sure you want to delete this post?" } %>
  </div>

  <div class ="back-categories-button">
    <%= link_to categories_path, id: "back-categories", class: "back-link" do %>
      <i class="fas fa-arrow-left"></i> Back to categories
    <% end %>
  </div>
</div>